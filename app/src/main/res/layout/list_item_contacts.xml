<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/list_item_contacts_image_view"
        android:layout_width="@dimen/list_item_icon_size"
        android:layout_height="@dimen/list_item_icon_size"
        android:layout_marginBottom="@dimen/list_item_contacts_margin_bottom"
        android:layout_marginLeft="@dimen/list_item_margin_right_left"
        android:layout_marginRight="@dimen/list_item_contacts_margin_top_right"
        android:layout_marginTop="@dimen/list_item_contacts_margin_top_right"
        android:src="@android:drawable/ic_dialog_alert" />

    <TextView
        android:id="@+id/list_item_contacts_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="Name"
        android:layout_marginRight="@dimen/list_item_margin_right_left"
        android:layout_toRightOf="@+id/list_item_contacts_image_view"
        android:textColor="@color/colorAccent"
        android:textSize="17dp" />
</RelativeLayout>